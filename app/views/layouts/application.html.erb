<!DOCTYPE html>
<html>
  <head>
    <title>Jewely</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Noto+Serif|Poppins&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Raleway&display=swap" rel="stylesheet">

    <% if current_user %>
      <script>
        window.currentUser = { 
          "id": <%= current_user.id %>,
          "username": "<%= current_user.username %>"
          };
      </script>
    <% else %>
      <script>
        window.currentUser = null;
      </script>
    <% end %>

  </head>
  
  <body>
    <%= yield %>
  </body>
</html>
